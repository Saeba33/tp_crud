{% extends 'base.html.twig' %}

{% block title %}
	Mon profil
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-gray-50 py-8">
		<div class=" mx-auto px-4 max-w-4xl">
			<div class="flex flex-col mb-12 sm:flex-row sm:items-center sm:justify-between">
				<h3 class="text-3xl font-bold text-gray-900 mb-2">Mon profil</h3>
				<a href="{{ path('app_home_page') }}" class="inline-flex items-center px-4 py-2 bg-gray-600 text-white font-medium rounded-lg hover:bg-gray-700">&#x2190; Retour à l'accueil</a>
			</div>
			<div class="shadow-2xl rounded-xl flex flex-col gap-6 p-6">
				<div>
					<label class="block text-sm font-medium text-gray-700 mb-1">Prénom</label>
					<div class="px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg text-gray-900">{{ user.firstname }}</div>
				</div>

				<div>
					<label class="block text-sm font-medium text-gray-700 mb-1">Nom de famille</label>
					<div class="px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg text-gray-900">{{ user.lastname }}</div>
				</div>

				<div class="md:col-span-2">
					<label class="block text-sm font-medium text-gray-700 mb-1">Adresse email</label>
					<div class="px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg text-gray-900">{{ user.email }}</div>
				</div>

				<div class="flex gap-6 mt-8">
					<a href="{{ path('app_user_update', {'id': user.id}) }}" class="w-full inline-flex items-center justify-center px-4 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700">Modifier le profil</a>
					<a href="{{ path('app_user_delete', {'id': user.id}) }}" class="w-full inline-flex items-center justify-center px-4 py-3 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700">Supprimer le profil</a>

				</div>
			</div>
		</div>
	</div>

{% endblock %}
