{% extends 'base.html.twig' %}

{% block title %}Hello Visitor
{% endblock %}

{% block body %}


	<div class="">
		<h1>Hello !</h1>

		{% if app.user == false %}
			<a href="{{path('app_login')}}">Log In</a>
			<a href="{{path('app_register')}}">Register</a>
		{% else %}
			<div>
				<a href="{{path('app_logout')}}">Log Out</a>
				<a href="{{path('app_user')}}">See my profile</a>

			</div>
			{% if is_granted("ROLE_ADMIN") %}
				<div>
					<a href="{{path('app_dashboard_admin')}}">Dashboard Admin</a>
				</div>
			{% endif %}
		{% endif %}


	</div>
{% endblock %}
